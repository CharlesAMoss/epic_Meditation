<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eca521"
    android:clickable="false"
    android:contextClickable="false"
    android:orientation="vertical">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:headerBackground="@android:color/holo_orange_dark"
        android:numbersSelectorColor="@android:color/holo_orange_dark"
        android:numbersTextColor="@android:color/holo_orange_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="New Button"
        android:id="@+id/mainSetTimeButton"
        android:onClick="anotherMessage"/>
</LinearLayout>